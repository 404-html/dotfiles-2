# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
# umask 027

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
        . "$HOME/.bashrc"
    fi
fi

# Add admin related paths
PATH="/sbin:/usr/sbin:/usr/local/sbin:$PATH"

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.bin" ] ; then
    PATH="$HOME/.bin:$PATH"
fi
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

if hash anacron 2>/dev/null; then
    # anacron in user mode.
    if  ! [ -d "$HOME/.anacron" ] ; then
        mkdir -p $HOME/.anacron/{spool,etc}
        touch $HOME/.anacron/anacrontab
    fi
    /usr/sbin/anacron -s -t ${HOME}/.anacron/etc/anacrontab -S ${HOME}/.anacron/spool
fi

#export CDPATH="$CDPATH:$HOME/workspace"
#export MANPATH="$MANPATH:$HOME/.opt/neovim/share/man"

# Prefer neovim, accept vim
if hash nvim 2>/dev/null; then
    neo="n"
fi
export EDITOR=${neo}'vim'
export VISUAL=${neo}'vim'
export PAGER='less'
export BROWSER='firefox'

# English language, iso-8601 date format, euro money, metric system
#export LANG=en_US.UTF-8
#export LC_CTYPE="en_US.utf8"
#export LC_NUMERIC="en_US.utf8"
#export LC_TIME="en_DK.utf8"
#export LC_COLLATE="en_US.utf8"
#export LC_MONETARY="en_DK.utf8"
#export LC_MESSAGES="en_US.utf8"
#export LC_PAPER="en_US.utf8"
#export LC_NAME="en_US.utf8"
#export LC_ADDRESS="en_US.utf8"
#export LC_TELEPHONE="en_US.utf8"
#export LC_MEASUREMENT="en_DK.utf8"
#export LC_IDENTIFICATION="en_US.utf8"

# RUST
export PATH="$HOME/.cargo/RustDT/bin:$PATH"
export RUST_SRC_PATH="/opt/rustc-1.9.0/src"

# Netkit
if [ -f $HOME/.opt/netkit/environment.sh ];then
    source $HOME/.opt/netkit/environment.sh
fi

