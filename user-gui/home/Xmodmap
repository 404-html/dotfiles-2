! Enable ScrollLock.
!!add mod3 = Scroll_Lock

! Remap Capslock to RControl. Activate CapsLock with Shift+CapsLock.
clear lock
clear control
add control = Caps_Lock Control_R Control_L
keycode 66 = Control_R Caps_Lock NoSymbol NoSymbol

! Printcreen to menu
!keycode 107 = Menu 
! Insert to printscreen
!keycode 118 = Print 

! Swap Capslock with RControl.
! remove Lock = Caps_Lock
! remove Control = Control_R
! keysym Control_R = Caps_Lock
! keysym Caps_Lock = Control_R
! add Lock = Caps_Lock
! add Control = Control_R

